<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" fx:controller="controller.SignUpController">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Sign Up" style="-fx-font-size: 20;" />
            <TextField fx:id="nameField" promptText="Enter your name" />
            <TextField fx:id="emailField" promptText="Enter your email" />
            <PasswordField fx:id="passwordField" promptText="Enter your password" />
            <ComboBox fx:id="roleBox" promptText="Select role" />
            <Button text="Sign Up" onAction="#handleSignUp" />
            <Button text="Back to Login" onAction="#goToLogin" />
        </VBox>
    </center>
</BorderPane>
