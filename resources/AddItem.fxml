<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AddItemController">
    <Label text="Add New Item" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Item Name" />
    <TextField fx:id="quantityField" promptText="Quantity" />
    <TextField fx:id="costField" promptText="Cost" />

    <Button text="Add Item" onAction="#handleAddItem" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
</VBox>
